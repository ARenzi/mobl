application calculator

title "Calculator"

import mobl
import mobl::ui::generic

screen root() {
  var n1 : Num = 2
  var n2 : Num = 2

  header("Calculator")
  group {
    item { numField(n1) }
    item { numField(n2) }
    item { "* " label(n1 * n2) }
    item { "+ " label(n1 + n2) }
    item { "- " label(n1 - n2) }
    item { "/ " label(n1 / n2) }
  }
}