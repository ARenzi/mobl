module example

entity Task {
  name        : String
  description : Text
  done        : Bool
  tags        : Collection<Tag>
}

entity Tag {
  name   : String
  tasks  : Collection<Task>
}

external type String { }
external type Int { }
external type Bool { }
external type Text { }
external type Uri { }
external type Collection<T> {}

template outputString(s : String) {
  <span databind=s></span>
}

template inputCheckbox(b : Bool) {
  <input type="checkbox" databind=b/>
}

template standardLayout() {
  "Header"
  elements()
  "Footer"
}

screen root() {
  standardLayout {
   outputString("Hello there!")
  }
}

