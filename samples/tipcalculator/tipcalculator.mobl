application samples::tipcalculator::tipcalculator

import mobl::ui

screen root() {
  var amount     =  10
  var percentage =  10
  var total      <- amount * (1 + percentage/100)

  header("Tip calculator")
  group {
    item { numField(amount) }
    item { numField(percentage) }
    item { label(total) }
  }
}